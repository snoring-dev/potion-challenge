{
  "name": "potion-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "dotenv -e .env.local -- tsx watch src/index.ts",
    "prisma:generate-local": "dotenv -e .env.local -- prisma generate",
    "prisma:generate": "prisma generate",
    "prisma:push": "dotenv -e .env.local -- prisma db push",
    "build": "npm run prisma:generate && tsc",
    "build:vercel": "npm run prisma generate",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@prisma/client": "^5.17.0",
    "dotenv": "^16.4.5",
    "hono": "^4.5.1",
    "prisma": "^5.17.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "dotenv-cli": "^7.4.2",
    "tsx": "^4.7.1"
  }
}
