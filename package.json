{
  "name": "potion",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run build:ui\" \"npm run dev:app\" \"npm run dev:api\"",
    "dev:ui": "npm run dev -w potion-ui",
    "dev:app": "npm run dev -w potion-app",
    "dev:api": "npm run dev -w potion-api",
    "build": "npm run build:ui && npm run build:app",
    "build:ui": "npm run build -w potion-ui",
    "build:api": "npm run build -w potion-api",
    "build:app": "npm run build -w potion-app",
    "test:ui": "npm run test -w potion-ui",
    "storybook": "npm run storybook -w potion-ui",
    "build-storybook": "npm run build-storybook -w potion-ui",
    "prisma:generate": "npm run prisma:generate -w potion-api",
    "prisma:push": "npm run prisma:push -w potion-api",
    "clean": "rimraf packages/*/dist packages/*/.turbo packages/*/node_modules node_modules",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "rimraf": "^5.0.0",
    "husky": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "pnpm": "9.4.0"
  }
}
